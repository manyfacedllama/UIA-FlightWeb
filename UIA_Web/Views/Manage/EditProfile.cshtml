@model UIA_Web.Models.UserEdit
@{
    ViewBag.Title = "Edit Profile";
}
<main class="page-content">
    <section class="bg-image-03">
        <div class="breadcrumb-wrapper">
            <div class="shell context-dark section-30 section-md-top-80">
                <h1 class="offset-top-20 text-ubold">Edit your profile.</h1>
                <ol class="breadcrumb">
                    <li><a href="./">Manage</a></li>
                    <li><a>Edit Profile</a></li>
                </ol>
            </div>
        </div>
    </section>
    <section class="section-80 section-md-120 bg-gray-lighter">
        <div class="shell">
            <ul class="nav-custom">
                <li>@Html.ActionLink("View Bookings","Index")</li>
                <li><a class="active" href=@Url.Action("EditProfile")>Edit Profile</a></li>
                <li>@Html.ActionLink("Change Password", "ChangePassword")</li>
            </ul>
            <div class="form-group">
                <div class="range range-xs-center">
                    <div class="cell-sm-8 cell-md-6 cell-lg-4">
                        @using (Html.BeginForm("EditProfile", "Manage", FormMethod.Post, new { @class = "rd-mailform text-left", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "form-label form-label-outside"})
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-gray", value = Model.Name })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label form-label-outside"})
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-gray", value = Model.Email })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.PassportNumber, new { @class = "form-label form-label-outside"})
                                @Html.TextBoxFor(m => m.PassportNumber, new { @class = "form-control form-control-gray", value = Model.PassportNumber })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.DateOfBirth, new { @class = "form-label form-label-outside" })
                                @Html.TextBoxFor(m => m.DateOfBirth, "{0:dd/MM/yyyy}", new { @class = "form-control form-control-gray", data_time_picker = "date", placeholder = "dd/MM/yyyy", value=Model.DateOfBirth })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label form-label-outside" })
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control form-control-gray", value = Model.PhoneNumber })
                            </div>
                                <input class="btn btn-info btn-block btn-sm offset-top-22" type="submit" value="Save Changes"/>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>