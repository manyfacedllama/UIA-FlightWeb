@model UIA_Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
<main class="page-content">
    <section class="bg-image-03">
        <div class="breadcrumb-wrapper">
            <div class="shell context-dark section-30 section-md-top-80">
                <h1 class="offset-top-20 text-ubold">Change your password.</h1>
                <ol class="breadcrumb">
                    <li><a href="./">Manage</a></li>
                    <li><a>Change Password</a></li>
                </ol>
            </div>
        </div>
    </section>
    <section class="section-80 section-md-120 bg-gray-lighter">
        <div class="shell">
            <ul class="nav-custom">
                <li>@Html.ActionLink("View Bookings", "Index")</li>
                <li>@Html.ActionLink("Edit Profile", "EditProfile")</li>
                <li><a class="active" href=@Url.Action("ChangePassword")>Change Password</a></li>
            </ul>
            <div class="form-group">
                <div class="range range-xs-center">
                    <div class="cell-sm-8 cell-md-6 cell-lg-4">
@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "rd-mailform text-left", role = "form" })) {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.LabelFor(m => m.OldPassword, new { @class = "form-label form-label-outside" })
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control form-control-gray" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.NewPassword, new { @class = "form-label form-label-outside" })
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-gray" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label form-label-outside" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-gray" })
                            </div>
                                <button class="btn btn-info btn-block btn-sm offset-top-22" type="submit">Change</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>