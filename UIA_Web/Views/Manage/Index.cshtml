@model UIA_Web.Models.BookingViewModel
@{
    ViewBag.Title = "Bookings";
}
<main class="page-content">
    <section class="bg-image-03">
        <div class="breadcrumb-wrapper">
            <div class="shell context-dark section-30 section-md-top-80">
                <h1 class="offset-top-20 text-ubold">View your bookings.</h1>
                <ol class="breadcrumb">
                    <li><a href="./">Manage</a></li>
                    <li><a>View Bookings</a></li>
                </ol>
            </div>
        </div>
    </section>
    <section class="section-80 section-md-120 bg-gray-lighter">
        <div class="shell">
            <ul class="nav-custom">
                <li><a class="active" href=@Url.Action("ViewBookings")>View Bookings</a></li>
                <li>@Html.ActionLink("Edit Profile", "EditProfile")</li>
                <li>@Html.ActionLink("Change Password", "ChangePassword")</li>
            </ul>
            <div class="range range-xs-center">

                @if (Model.records.Count == 0)
            {
                    <h4> No bookings found.<a href=@Url.Action("Index", "Home")> Book a flight!</a></h4>
                }
                else
                {
                    <div class="cell-sm-8 cell-md-12 cell-lg-12">
                        <div class="table-responsive">
                            <table class="table table-bordered text-left">
                                <thead>
                                    <tr>
                                        <th class="text-left success">Reference ID</th>
                                        <th class="text-left success">From</th>
                                        <th class="text-left success">To</th>
                                        <th class="text-left success">Time</th>
                                        <th class="text-left success">Seat No.</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model.records)
                                    {
                                        <tr>
                                            <td>
                                                @booking.Id
                                            </td>
                                            <td>
                                                @booking.Origin
                                            </td>
                                            <td>
                                                @booking.Destination
                                            </td>
                                            <td>
                                                @booking.Time
                                            </td>
                                            <td>
                                                @booking.SeatNo
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>

        </div>
    </section>
</main>