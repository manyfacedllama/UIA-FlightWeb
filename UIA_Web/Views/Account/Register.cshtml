@model UIA_Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<main class="page-content">
    <section class="bg-image-03">
        <div class="breadcrumb-wrapper">
            <div class="shell context-dark section-30 section-md-top-80">
                <h1 class="offset-top-20 text-ubold">Sign up for an account.</h1>
                <ol class="breadcrumb">
                    <li><a href="./">Account</a></li>
                    <li><a>Register</a></li>
                </ol>
            </div>
        </div>
    </section>
    <section class="section-80 section-md-120 bg-gray-lighter">
        <div class="shell">
            <ul class="nav-custom">
                <li>@Html.ActionLink("Login", "Login")</li>
                <li><a class="active" href=@Url.Action("Register")>Register</a></li>
            </ul>
        <div class="form-group">
                <div class="range range-xs-center">
                    <div class="cell-sm-8 cell-md-6 cell-lg-4">
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "rd-mailform text-left", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "form-label form-label-outside" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-gray" })
    </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label form-label-outside" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-gray" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.PassportNumber, new { @class = "form-label form-label-outside" })
                                @Html.TextBoxFor(m => m.PassportNumber, new { @class = "form-control form-control-gray" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.DateOfBirth, new { @class = "form-label form-label-outside" })
                                @Html.EditorFor(m => m.DateOfBirth, new { htmlAttributes = new { @class = "form-control form-control-gray", data_time_picker = "date", placeholder = "dd/MM/yyyy" } })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label form-label-outside" })
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control form-control-gray" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "form-label form-label-outside" })
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-gray" })
                                </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label form-label-outside" })
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-gray" })
                                </div>
                            <button class="btn btn-info btn-block btn-sm offset-top-22" type="submit">Register</button>
}
                    </div>
                </div>
            </div></div>
</section>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}