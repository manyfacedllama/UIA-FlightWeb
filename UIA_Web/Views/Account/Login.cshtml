@using UIA_Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    <main class="page-content">
        <section class="bg-image-03">
            <div class="breadcrumb-wrapper">
                <div class="shell context-dark section-30 section-md-top-80">
                    <h1 class="offset-top-20 text-ubold">Sign in to your account.</h1>
                    <ol class="breadcrumb">
                        <li><a href="./">Account</a></li>
                        <li><a>Login</a></li>
                    </ol>
                </div>
            </div>
        </section>
        <section class="section-80 section-md-120 bg-gray-lighter">
            <div class="shell">
                <ul class="nav-custom">
                    <li><a class="active" href=@Url.Action("Login")>Login</a></li>
                    <li>@Html.ActionLink("Register", "Register")</li>
                </ul>
                <div class="range range-xs-center">
                    <div class="cell-sm-8 cell-md-6 cell-lg-4">
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "rd-mailform text-left", role = "form" }))
{
    @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label form-label-outside" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-gray" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "form-label form-label-outside" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-gray" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <input class="btn btn-info btn-block btn-sm offset-top-22" type="submit" value="Sign in" />}
                    </div>
                </div>
            </div>
        </section>
    </main>
    }
