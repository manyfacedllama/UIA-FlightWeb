@model UIA_Web.Models.SearchFlightModel
@{
    ViewBag.Title = "Search Result";
}
<main class="page-content">
    <section class="bg-image-03">
        <div class="breadcrumb-wrapper">
            <div class="shell context-dark section-30 section-md-top-80">
                <h1 class="offset-top-20 text-ubold">Search Results</h1>
                <ol class="breadcrumb">
                    <li><a href="./">Flight</a></li>
                    <li><a>Search Results</a></li>
                </ol>
            </div>
        </div>
    </section>
    <section class="section-80 section-md-120 bg-gray-lighter">
@using (Html.BeginForm("Book", "Flight", FormMethod.Post, new { role = "form"}))
{    @Html.AntiForgeryToken()
        <div class="shell shell-wide">
            <div class="range text-lg-left">
                <div class="cell-lg-8">
                    <div class="inset-xl-right-80">
                        <h2 class="text-ubold">@Model.Origin (@Model.OriginAirport) to @Model.Destination (@Model.DestinationAirport)</h2>
                        @if (Model.hasReturn)
        {
                            <h5 class="text-gray offset-top-10">with return flight.</h5>
                        }
                        <h4 class="offset-top-40">@Model.Seat_Class</h4>
                        <hr class="divider divider-lg-left divider-info divider-85 offset-top-20">
                        <div class="offset-top-30">
                            <div class="range range-xs-justify text-left">
                                <div class="cell-sm-8 cell-md-6 cell-xl-4">
                                    <div class="range">
                                        <div class="cell-sm-6">
                                            <span class="small">Departure Date</span>
                                            <!--Select 2-->
                                            <div class="offset-top-4">
                                                @Html.TextBoxFor(m => m.Date, new { @class = "form-control form-control-has-validation form-control-last-child", disabled = "true" })
                                            </div>
                                        </div>
                                        @if (Model.hasReturn)
{
                                            <div class="cell-sm-6 offset-top-20 offset-sm-top-0">
                                                <span class="small">Return Date</span>
                                                <!--Select 2-->
                                                <div class="offset-top-4">
                                                    @Html.TextBoxFor(m => m.DateReturn, new { @class = "form-control form-control-has-validation form-control-last-child", disabled = "true" })
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="offset-top-40">
                            <ul class="list-tickets">
                                <li class="list-item">
                                    <div class="list-item-inner">
                                        <div class="list-item-main">
                                            <div class="list-item-top">
                                                <div class="list-item-logo"><img src="~/images/ukraine-international-airlines-logo.jpg" alt=""></div>
                                                <div class="list-item-content">
                                                    <div class="list-item-content-left">
                                                        <div class="text-bold text-base">@Model.Time.ToString("dd/MM/yyyy hh:mm tt")</div><span class="small reveal-block">@Model.OriginAirport</span>
                                                    </div>
                                                    <div class="list-item-content-line-wrapper small">
                                                        <div class="list-item-content-line-top">@Model.Duration</div>
                                                        <div class="list-item-content-line"></div>
                                                        <div class="list-item-content-line-bottom text-primary">Direct</div>
                                                    </div>
                                                    <div class="list-item-content-right">
                                                        <div class="text-bold text-base">@Model.ArrivalTime.ToString("dd/MM/yyyy hh:mm tt")</div><span class="small reveal-block">@Model.DestinationAirport</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="list-item-footer">
                                            <span class="small">Flight Price</span>
                                            <h5 class="text-bold list-item-price">@HttpContext.Current.Items["currency"] @Model.Price</h5>
                                        </div>
                                    </div>
                                    <div class="small text-gray-light list-item-subtitle">Outbound Flight</div>
                                </li>
                                @if (Model.hasReturn)
                                {
                                    <li class="list-item">
                                        <div class="list-item-inner">
                                            <div class="list-item-main">
                                                <div class="list-item-top">
                                                    <div class="list-item-logo"><img src="~/images/ukraine-international-airlines-logo.jpg" alt=""></div>
                                                    <div class="list-item-content">
                                                        <div class="list-item-content-left">
                                                            <div class="text-bold text-base">@Model.TimeReturn.ToString("dd/MM/yyyy hh:mm tt")</div><span class="small reveal-block">@Model.OriginAirportReturn</span>
                                                        </div>
                                                        <div class="list-item-content-line-wrapper small">
                                                            <div class="list-item-content-line-top">@Model.DurationReturn</div>
                                                            <div class="list-item-content-line"></div>
                                                            <div class="list-item-content-line-bottom text-primary">Direct</div>
                                                        </div>
                                                        <div class="list-item-content-right">
                                                            <div class="text-bold text-base">@Model.ArrivalTimeReturn.ToString("dd/MM/yyyy hh:mm tt")</div><span class="small reveal-block">@Model.DestinationAirportReturn</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="list-item-footer">
                                                <span class="small">Flight Price</span>
                                                <h5 class="text-bold list-item-price">@HttpContext.Current.Items["currency"] @Model.PriceReturn</h5>
                                            </div>
                                        </div>
                                        <div class="small text-gray-light list-item-subtitle">Return Flight</div>
                                    </li>
                                }
                            </ul>
                        </div>
                        @Html.HiddenFor(m => m.ArrivalTime)
                        @Html.HiddenFor(m => m.ArrivalTimeReturn)
                        @Html.HiddenFor(m => m.Date)
                        @Html.HiddenFor(m => m.DateOfBirth)
                        @Html.HiddenFor(m => m.DateReturn)
                        @Html.HiddenFor(m => m.Destination)
                        @Html.HiddenFor(m => m.DestinationAirport)
                        @Html.HiddenFor(m => m.DestinationAirportReturn)
                        @Html.HiddenFor(m => m.DestinationReturn)
                        @Html.HiddenFor(m => m.Duration)
                        @Html.HiddenFor(m => m.DurationReturn)
                        @Html.HiddenFor(m => m.hasReturn)
                        @Html.HiddenFor(m => m.Time)
                        @Html.HiddenFor(m => m.TimeReturn)
                        @Html.HiddenFor(m => m.Origin)
                        @Html.HiddenFor(m => m.OriginAirport)
                        @Html.HiddenFor(m => m.OriginAirportReturn)
                        @Html.HiddenFor(m => m.OriginReturn)
                        @Html.HiddenFor(m => m.Price)
                        @Html.HiddenFor(m => m.PriceReturn)
                        @Html.HiddenFor(m=> m.TotalPrice)
                        @Html.HiddenFor(m => m.Seat_Class)
                        @Html.HiddenFor(m => m.Name)
                        @Html.HiddenFor(m => m.Email)
                        @Html.HiddenFor(m=>m.DateOfBirth)
                        @Html.HiddenFor(m=>m.PhoneNumber)
                        @Html.HiddenFor(m=>m.PassportNumber)
                        @Html.HiddenFor(m=>m.UserId)
                                <div class="range">
                                    <div class="cell-lg-2 cell-lg-sm-2 offset-top-30 offset-lg-top-20">
                                        <input class="btn btn-info btn-block offset-top-22" type="submit" value="Book" />
                                    </div>

                                    <div class="cell-lg-2 cell-lg-sm-2 offset-top-30 offset-lg-top-20">
                                        @Html.ActionLink("Search Again", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-info" })
                                    </div>
                                </div>

                            </div>
                            </div>
                        </div>
                    </div>}
    </section>
</main>